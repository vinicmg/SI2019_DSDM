<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VisualizarVendaActivity">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblNomeCliente"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAlignment="center" android:textSize="24sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/lblEmail"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblEmail"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/lblTelefone"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTelefone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"/>
    <TextView
            android:text="99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblQtdeFrango" android:textSize="40sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline3" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2" app:layout_constraintGuide_begin="64dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent=".25"/>
    <TextView
            android:text="@string/frango"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblFrango"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/lblQtdeFrango" android:layout_marginTop="8dp"/>
    <TextView
            android:text="R$ 0,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblValorFrango"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblFrango"/>
    <TextView
            android:text="99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblQtdeCalabresa" android:textSize="40sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/lblQtdeFrango"/>
    <TextView
            android:text="@string/calabresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblCalabresa"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/lblQtdeCalabresa"/>
    <TextView
            android:text="R$ 0,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblValorCalabresa" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblCalabresa"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"/>
    <TextView
            android:text="99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblQtdePortuguesa" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/lblQtdeCalabresa"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
            android:textSize="40sp"/>
    <TextView
            android:text="@string/portuguesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/lblQtdePortuguesa"/>
    <TextView
            android:text="R$ 0,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblValorPortuguesa" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/lblQtdePortuguesa" android:textSize="40sp"/>
    <TextView
            android:text="@string/moda_casa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView13" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="R$ 0,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblValorModa" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/retirada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRetirar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="R$ 999,99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVenda" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblValorModa" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnRetirar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>